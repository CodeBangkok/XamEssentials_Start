<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamEssentials.Views.FlashlightPage"
             Title="Flashlight">
    <StackLayout>
        <Label Text="A simple way to turn the flashlight on/off"
               FontAttributes="Bold"
               Margin="12" />
        <ScrollView>
            <StackLayout Padding="12,0,12,12"
                         Spacing="6">
                <Button Text="Toggle Flashlight"
                        x:Name="flashlightButton"
                        BackgroundColor="Silver"/>
                <Label Text="Flashlight is on."
                       FontAttributes="Italic"
                       x:Name="onLabel"
                       IsVisible="false"/>
                <Label Text="Flashlight is off."
                       FontAttributes="Italic"
                       x:Name="offLabel" />
                <Label Text="Flashlight is not supported."
                       TextColor="Red"
                       FontAttributes="Italic"
                       x:Name="notSupportLabel"
                       IsVisible="false"/>
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>